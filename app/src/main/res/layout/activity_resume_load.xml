<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.Toolbar
    android:id="@+id/act_rsl_tb"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:id="@+id/act_rsl_im"
        android:layout_width="25dp"
        android:layout_height="25dp" />
</android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/et_np"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/act_rsl_tb"
       android:layout_marginTop="53dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:hint="请输入新密码"
        android:textColor="#dadada"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:background="@null"
        android:textCursorDrawable="@null"/>

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/et_np"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#000000" />
    <EditText
        android:id="@+id/et_anp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/v_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:hint="再次输入新密码"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:textColor="#dadada"
        android:background="@null"
        android:textCursorDrawable="@null"/>

    <View
        android:id="@+id/v_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
      android:layout_below="@+id/et_anp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#000000" />
    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/v_2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/btn_float_normal"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="19sp" />
</RelativeLayout>
