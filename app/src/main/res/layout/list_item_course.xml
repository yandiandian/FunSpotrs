<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rl_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/stu_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/im" />

        <TextView
            android:id="@+id/tv_acount_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/stu_image"
            android:text="审阅人"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_acount_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_acount_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/stu_image"
            android:text="目标：减肥。塑性"
            android:textSize="@dimen/sp_12" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp">

            <TextView
                android:id="@+id/tv_acount_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_acount_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_acount_3"
                android:text="/"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_acount_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_acount_4"
                android:text="12"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/im_cr"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/tv_acount_2"
            android:src="@drawable/im" />

    </RelativeLayout>


</LinearLayout>